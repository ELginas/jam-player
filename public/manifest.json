{
  "manifest_version": 3,
  "name": "Jam Player",
  "version": "1.0.0",
  "icons": {
    "48": "icons/border-48.png"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://itch.io/*"],
      "js": ["hook.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://itch.io/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "tabs", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["api.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

{
  "name": "jam-player-ext",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development vite build --watch",
    "build": "vite build",
    "preview": "vite preview",
    "start": "web-ext run --source-dir dist",
    "start:dev": "concurrently \"npm run dev\" \"web-ext run --source-dir dist\"",
    "package": "npm run build && web-ext build --source-dir dist --overwrite-dest"
  },
  "packageManager": "pnpm@10.6.4",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/firefox-webext-browser": "^120.0.4",
    "concurrently": "^9.1.2",
    "svelte": "^5.23.2",
    "vite": "^6.2.2",
    "web-ext": "^8.5.0"
  }
}
